  <script>
    let selectedDemographic = '';
    let selectedTopic = '';

    // NOTE: API keys are NEVER displayed, stored, or transmitted
    // They are kept secure in backend only
    // This tool communicates with API through secure channels

    function switchMode(mode) {
      const buttons = document.querySelectorAll('.toggle-btn');
      buttons.forEach(btn => btn.classList.remove('active'));
      
      if (mode === 'withScript') {
        buttons[0].classList.add('active');
        document.getElementById('withScriptForm').classList.add('active');
        document.getElementById('noScriptForm').classList.remove('active');
      } else {
        buttons[1].classList.add('active');
        document.getElementById('noScriptForm').classList.add('active');
        document.getElementById('withScriptForm').classList.remove('active');
      }
      
      document.getElementById('results').classList.remove('active');
    }

    function selectDemographic(element, value) {
      document.querySelectorAll('#noScriptForm .grid-btn').forEach(btn => {
        if (btn.textContent.match(/^\d+/)) {
          btn.classList.remove('active');
        }
      });
      element.classList.toggle('active');
      selectedDemographic = element.classList.contains('active') ? value : '';
    }

    function selectTopic(element, value) {
      document.querySelectorAll('#noScriptForm .grid-btn').forEach(btn => {
        if (!btn.textContent.match(/^\d+/)) {
          btn.classList.remove('active');
        }
      });
      element.classList.toggle('active');
      selectedTopic = element.classList.contains('active') ? value : '';
    }

    function showLoading() {
      document.getElementById('loading').classList.add('active');
      document.getElementById('results').classList.remove('active');
    }

    function hideLoading() {
      document.getElementById('loading').classList.remove('active');
    }

    function showResults(hook, strength) {
      document.getElementById('hookResult').textContent = hook;
      document.getElementById('strengthResult').textContent = strength;
      document.getElementById('results').classList.add('active');
    }

    function generateHook() {
      if (!selectedDemographic) {
        alert('Please select a demographic');
        return;
      }
      if (!selectedTopic) {
        alert('Please select a topic');
        return;
      }

      const description = document.getElementById('videoDescription').value;
      if (!description.trim()) {
        alert('Please enter a video description');
        return;
      }

      showLoading();
      
      // Simulated hook generation
      // In production, this would call Claude API securely
      setTimeout(() => {
        const hooks = {
          'Entertainment-13-18': "Wait until you see what happens... ü§Ø",
          'Entertainment-18-25': "This is absolutely INSANE...",
          'Education-25-35': "Here's something you actually need to know",
          'Gaming-13-18': "No way this is actually possible...",
          'Comedy-18-25': "I literally cannot stop laughing",
          'How-To-25-35': "Watch how I do this in 2 minutes",
          'Vlog-mixed': "You won't BELIEVE what just happened",
        };

        const key = `${selectedTopic}-${selectedDemographic}`;
        const hook = hooks[key] || "You have to watch this...";
        const strength = selectedDemographic === '13-18' ? 'High FOMO & Urgency' : 'Curiosity & Trust';

        hideLoading();
        showResults(hook, strength);
      }, 1500);
    }

    function generateFromScript() {
      const script = document.getElementById('scriptInput').value;
      if (!script.trim()) {
        alert('Please paste your script');
        return;
      }

      showLoading();

      // Simulated script analysis
      // In production, this would call Claude API securely
      setTimeout(() => {
        const words = script.toLowerCase();
        const hasAction = /amazing|crazy|insane|unbelievable|never|wait|omg/i.test(words);
        const hasQuestion = /\?/.test(words);
        const hasEmotional = /love|hate|fear|hope|amazing|beautiful/i.test(words);
        
        let hook = "Watch this...";
        let strength = "General Interest";

        if (hasAction && hasQuestion && hasEmotional) {
          hook = "Wait... you're going to FEEL this...";
          strength = "Emotional Hook + Intrigue";
        } else if (hasAction && hasQuestion) {
          hook = "Wait... is this actually possible?";
          strength = "Curiosity + Shock Value";
        } else if (hasAction && hasEmotional) {
          hook = "This is going to hit you HARD...";
          strength = "Emotional Impact";
        } else if (hasQuestion) {
          hook = "What would YOU do in this situation?";
          strength = "Personal Engagement";
        } else if (hasAction) {
          hook = "You won't believe what happens next...";
          strength = "High Suspense";
        } else {
          hook = "Here's something you need to see...";
          strength = "Intrigue + Value";
        }

        hideLoading();
        showResults(hook, strength);
      }, 1500);
    }

    function generateNewHook() {
      document.getElementById('results').classList.remove('active');
      if (document.getElementById('withScriptForm').classList.contains('active')) {
        generateFromScript();
      } else {
        generateHook();
      }
    }
  </script>
</body>
</html>
